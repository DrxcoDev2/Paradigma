{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types" 
    ],
    "experimentalDecorators": true,   // Necesario para usar decoradores
    "emitDecoratorMetadata": true  
  },
  "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "global.d.ts"
    ]
}
